<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.gmu.sherrydang.lab4.MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/westtxt"
                android:text="WEST"
                android:textSize="35dp"
                android:background="#3bc639"
                android:layout_marginRight="5dp"
                android:typeface="serif"></TextView>
            <TextView
                android:id="@+id/countertxt"
                android:text="COUNTER"
                android:background="#2ce9fc"
                android:textStyle="bold"
                android:textSize="35dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:typeface="serif"></TextView>
            <TextView
                android:id="@+id/easttxt"
                android:text="EAST"
                android:textStyle="bold"
                android:textSize="35dp"
                android:background="#3bc639"
                android:layout_marginLeft="5dp"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/westCounter"
                android:layout_marginRight="5dp"
                android:background="#3bc639"
                android:text=""
                android:textSize="60dp"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="serif"></TextView>

            <TextView
                android:id="@+id/counter"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#2ce9fc"
                android:text=""
                android:gravity="center"
                android:textSize="60dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>

            <TextView
                android:id="@+id/eastCounter"
                android:text=""
                android:textStyle="bold"
                android:textSize="60dp"
                android:gravity="center"
                android:background="#3bc639"
                android:layout_marginLeft="5dp"
                android:typeface="serif"></TextView>
        </TableRow>
    </TableLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="302dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/gobnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:textSize="30dp"
            android:onClick="goOnButtonClicked"/>

        <CheckBox
            android:id="@+id/fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fix It" />
    </LinearLayout>

    <TextView
        android:id="@+id/authorname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Binh Dang"
        android:textSize="20dp" />

</LinearLayout>
